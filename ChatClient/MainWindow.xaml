<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="635*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbUserName"  HorizontalAlignment="Left" Height="40" Margin="323,10,0,0" TextWrapping="Wrap" Text="Имя юзера" VerticalAlignment="Top" Width="365" Grid.ColumnSpan="2"/>
        <Button x:Name="bConnDisconn"  Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="66,10,0,0" VerticalAlignment="Top" Width="238" Height="39"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Left" Height="243" VerticalAlignment="Top" Width="622" Margin="66,70,0,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbMessage" HorizontalAlignment="Left" Height="62" Margin="66,333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="622" Grid.ColumnSpan="2" KeyDown="TbMessage_KeyDown"/>

    </Grid>
</Window>
